<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PizzaDetails">

    <ImageView
        android:id="@+id/pizzakep2"
        android:layout_width="271dp"
        android:layout_height="159dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizza1" />

    <TextView
        android:id="@+id/pizzaDNev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizzakep2" />

    <RadioGroup
        android:id="@+id/meretek"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizzaDNev">

        <RadioButton
            android:id="@+id/kicsi"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:text="kicsi" />

        <RadioButton
            android:id="@+id/kozepes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="kozepes" />

        <RadioButton
            android:id="@+id/nagy"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="nagy" />

    </RadioGroup>

    <TextView
        android:id="@+id/kicsiAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/meretek"
        app:layout_constraintTop_toBottomOf="@+id/pizzaDNev" />

    <TextView
        android:id="@+id/kozepesAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/meretek"
        app:layout_constraintTop_toBottomOf="@+id/kicsiAr" />

    <TextView
        android:id="@+id/nagyAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/meretek"
        app:layout_constraintTop_toBottomOf="@+id/kozepesAr" />

    <CheckBox
        android:id="@+id/gomba"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:text="Gomba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meretek" />

    <CheckBox
        android:id="@+id/sonka"
        android:layout_width="88dp"
        android:layout_height="27dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:text="Sonka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gomba" />

    <CheckBox
        android:id="@+id/kolbasz"
        android:layout_width="88dp"
        android:layout_height="28dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="4dp"
        android:text="Kolbasz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonka" />

    <TextView
        android:id="@+id/gombaAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/gomba"
        app:layout_constraintTop_toBottomOf="@+id/nagyAr" />

    <TextView
        android:id="@+id/sonkaAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/sonka"
        app:layout_constraintTop_toBottomOf="@+id/gombaAr" />

    <TextView
        android:id="@+id/kolbaszAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/kolbasz"
        app:layout_constraintTop_toBottomOf="@+id/sonkaAr" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:text="Vegso ar:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kolbasz" />

    <TextView
        android:id="@+id/osszesen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/kolbaszAr" />

    <Button
        android:id="@+id/rendeles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:text="Megrendel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>